<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/circleImageView"
            android:src="@android:color/transparent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/users"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userTitle" app:layout_constraintStart_toEndOf="@+id/circleImageView"
            android:layout_marginStart="16dp"
            android:textColor="#6374f3"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/circleImageView"
            app:layout_constraintBottom_toBottomOf="@+id/circleImageView" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/userDetail"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/rightarrow"
            android:id="@+id/userDetail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="54.80dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>
